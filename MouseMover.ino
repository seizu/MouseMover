void setup() {
  DigiMouse.begin();
}

void loop() {
  int x = mouseData[inx];
  int y = mouseData[inx+1];
  int wait = mouseData[inx+2];
  if(toggle) {
    x = -x;
    y = -y;
  }
  DigiMouse.move(x,y,0);
  DigiMouse.delay(wait);
  inx+=3;
  if(inx >= steps) {
    inx = 0;
    toggle = toggle^1;
    DigiMouse.delay(8000);
  }
}
